{
    "manifest_version": 3,
    "name": "Canvas Notes Extension",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "cookies"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://fiu.instructure.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources":  [{
        "resources": ["assets/notepadicon.blue.svg", "assets/notepadicon.white.svg"],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
        "matches": ["https://fiu.instructure.com/*"],
        "js": ["content.js"]
    }]
}